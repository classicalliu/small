<beast-header>
  <div class="logo">
    <%= image_tag 'https://avatars3.githubusercontent.com/u/530175?v=3&s=200' %>
    <h3><%= t 'company_name' %></h3>
  </div>
  <beast-header-menu>
    <ul>
      <li<%= ' class=active' if controller_name == 'posts' %>><%= link_to 'BLOG', posts_path %></li>
      <li<%= ' class=active' if controller_name == 'archives' %>><%= link_to 'ARCHIVE', archive_path %></li>
      <li><%= link_to 'GITHUB', 'https://github.com/mycolorway' %></li>
      <li><%= link_to 'RSS', posts_path(format: :atom) %></li>
    </ul>
  </beast-header-menu>
</beast-header>
