<% if params[:tag].present? %>
<div class="tag-title"><%= params[:tag] %></div>
<% end %>
<div class="posts">
  <% if @posts.any? %>
    <%= render @posts %>
  <% else %>
    <p class="no-post">
      <%= t '.no_post' %>
    </p>
    <% if logged_in? %>
      <%= link_to t('.create_first_post'), new_post_path, class: 'link-new-post' %>
    <% end %>
  <% end %>
</div>

<%= paginate @posts %>
