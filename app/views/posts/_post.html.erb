<article class="post">
  <h2 class="title">
    <%= link_to post_path(id: post.slug) do %>
      <%= post.title %>
    <% end %>
  </h2>
  <div class="abstract">
    <%= post.abstract %>
  </div>
  <div class="info">
    <span class="created-at"><%= post.created_at.strftime("%Y/%m/%d") %></span>
    <span class="author"><%= post.author.name %></span>
    <span class="tags"><%= render 'shared/taglist', splitor: ' Â· ', tags: post.tags %></span>
  </div>
</article>
