<article class="post">
  <h2 class="title">
    <%= link_to post_path(id: post.slug) do %>
      <%= post.title %>
    <% end %>
  </h2>
  <div class="abstract">
    <%= post.abstract.html_safe %>
  </div>
  <div class="info">
    <span class="created-at"><%= post.created_at.strftime("%Y/%m/%d") %></span>
    <span class="author"><%= post.author.name %></span>
    <div class="tags">
      <%= post.tags.map do |tag| %>
        <% render tag %>
      <% end.join('Â·').html_safe %>
    </div>
  </div>
</article>
