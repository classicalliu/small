<%= form_with model: @post, scope: :post, remote: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <br/>
  <%= form.label :content %>
  <%= form.text_area :content, class: 'editable' %>
  <%= form.hidden_field :published, value: true %>
  <br/>
  <%= form.submit %>
<% end %>