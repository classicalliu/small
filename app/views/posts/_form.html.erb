<beast-form>
<%= simple_form_for(post, action: :create, remote: true) do |f| %>
  <%= f.input :title, label: false, placeholder: t('.title') %>
  <%= f.input :content, label: false do %>
    <beast-editor>
      <%= f.text_area :content %>
    </beast-editor>
  <% end %>
  <%= f.input :tag_string, label: t('.tags') %>
  <%= f.input :slug, label: t('.change_slug', posts_url: posts_url), required: false %>
<% end %>
</beast-form>
