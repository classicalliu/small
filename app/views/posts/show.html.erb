<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @post.slug %>
</p>

<% if current_user&.author? %>
<%= link_to 'Edit', edit_post_path(@post.slug) %> |
<% end %>
<%= link_to 'Back', posts_path %>

<h2>Add Comments</h2>

<% if logged_in? %>
<%= form_for [@post, Comment.new] do |f| %>
  <p>
    <%= f.label :content, "New Comment"%>
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit "Add comment" %></p>
<% end %>
<% else %>
  <%= link_to 'Login as github to comment', '/auth/github'%>
<% end %>

<h2>Comments</h2>
<% @comments.each do |comment| %>
  <p><%= comment.user.name %>: <%= comment.content %></p>
<% end %>
