<div align="center">
  <%= form_with url: post_comments_path(@post), scope: :comment, remote: true do |form| %>

    <% unless logged_in? %>
      <%= form.label :email %>
      <%= form.text_field :email %>
      <br/>

      <%= form.label :name %>
      <%= form.text_field :name %>
      <br/>
    <% end %>

    <%= form.text_area :content %>
    <%= form.submit t('.submit'), 'data-turbolinks-action': "replace" %>
  <% end %>
</div>