<div class="container">
  <% @authors.each do |author| %>

    <div class="card mt-5 author-card" style="width: 100%;">
      <div class="card-body">

        <div class="row">
          <div class="col-md-3 text-center">
            <a href="<%= posts_path(author: author.email) %>">
              <%= image_tag author_avatar(author), class: "rounded-circle", alt: 'avatar', style: "width: 5rem; height: 5rem" %>
            </a>
          </div>

          <div class="col-md-3">
            <h5>name</h5>
            <p><%= author.bio %></p>
          </div>


          <% author.posts.limit(2).each do |post| %>
            <div class="col-md-3 text-center">
              <a href="<%= post_path(post) %>" >
                <div style="background-image: url(<%= post.cover.url %>); background-size: 100% 100%; height: 100%; " >
                  <div style="position: absolute; bottom: 0;">
                    <%= post.title %>
                  </div>
                </div>
              </a>
            </div>
          <% end %>
        </div>

      </div>

    </div>

  <% end %>

</div>
