<div class="login-box center-box">
  <h1><%= t('.edit_author') %></h1>

  <ul>
    <% @author.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>

  <div class="container">
    <div class="col-sm-10">
      <%= form_with model: @author, scope: :author, remote: true do |form| %>

        <%= image_tag author_avatar(@author) %>

        <div class="form-group row">
          <div class="col-sm-10">
            <%= form.file_field :avatar, class: 'form-control', id: 'author-avatar' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :name, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :bio, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :bio, class: 'form-control' %>
          </div>
        </div>

        <%= form.submit t('.submit'), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>


</div>